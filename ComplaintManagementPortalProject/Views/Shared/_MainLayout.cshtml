<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Page.title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <!--Navbar-->
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div id="navbar" class="navbar-collapse collapse">

                <!-- Start Unorderd list for My Complaints-->
                <ul class="nav navbar-nav">
                    @if (ViewBag.name != null && ViewBag.Usertype == 2)

                    {
                        <li>
                            <a href="#">
                                Welcome @ViewBag.name
                                <i class="glyphicon glyphicon-user"></i>

                            </a>
                        </li>
                        <li>
                            <a href="#">
                                My Complaints
                                <i class="glyphicon glyphicon-eye-open"></i>

                            </a>
                        </li>
                    }

                    @if (ViewBag.Usertype == 1)
                    {

                        <li>
                            <a href="#">
                                All Complaints

                                <i class="glyphicon glyphicon-thumbs-down"></i>

                            </a>
                        </li>
                    }
                    <li>
                        <a href="#">
                            Home
                            <i class="glyphicon glyphicon-home"></i>
                        </a>
                    </li>
                </ul>
                <!-- End navbar for my Complaints-->
                <!-- Start Unorderd list Sign up and Sign in-->

                <ul class="nav navbar-nav navbar-right">
                    @if (ViewBag.name == null)
                    {
                        <li>
                            <a href="#">
                                Sign in
                                <i class="glyphicon glyphicon-user"></i>

                            </a>
                        </li>
                        <li>
                            <a href="#">
                                Sign up
                                <i class="glyphicon glyphicon-lock"></i>

                            </a>
                        </li>
                    }
                </ul>

                <!--End of unordered list for Sign up and Sign in-->
            </div>
        </div>
    </nav>
    @RenderBody()

    <!--Footer-->
<footer class="navbar navbar-fixed-bottom myfooter">
    <div class="subfooter">
        <div class="container">
            <div class="subfooter">
                <p> Copyright @DateTime.Now.Year PwC &copy;</p>
            </div>
        </div>
    </div>
</footer>
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html>
